{
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "buildCommand": "npm install && npm run build"
      }
    },
    {
      "src": "/server/api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/server/api" },
    { "handle": "filesystem" },
    { "src": "/assets/(.*)", "dest": "client/assets" },
    { "src": "/(.*)", "dest": "client/index.html" }
  ]
}
