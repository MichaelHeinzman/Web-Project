{
  "builds": [
    { "src": "server/api/**/*.js", "use": "@vercel/node" },
    {
      "src": "client/dist/**/*",
      "use": "@vercel/static-build",
      "config": { "distDir": "client/dist" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/server/api/$1" },
    { "src": "/(.*)", "dest": "/client/dist/$1" }
  ]
}
